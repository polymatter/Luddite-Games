<% if not current_cart.cartitems.nil? %>
  <table class="table table-condensed">
    <caption>Shopping Cart</caption>
    <% current_cart.cartitems.each do |item| %>
    <tbody>
    <tr>
      <td><%= item.product.name %></td>
	  <td><%= item.quantity %></td>
	  <td><%= item.been_added %></td>
    </tr>
    </tbody>
    <% end %>
  </table>
  <%= form_tag APP_CONFIG[:paypal_url] do %>
    <%= hidden_field_tag :cmd, "_s-xclick" %>
    <%= hidden_field_tag :encrypted, @current_cart.paypal_encrypted("http://www.ludditegames.com","http://www.ludditegames.com") %>
    <%= submit_tag "Checkout", :class => "btn btn-primary" %>
  <% end %>
<% end %>